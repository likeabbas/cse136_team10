<!DOCTYPE HTML>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="../styles/style.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">

    <title>architecture</title>
</head>

<body>
<div class="side-bar">
    <h1>BookMarx</h1>
    <p id="helloUser">Hello <em>blank</em> !</p>
    <div class="folder-wrapper">
        <div onClick="location.href='/bookmarks/add'" class="add-folder"><p>Add bookmark</p></div>
        <h2>My List</h2>
        <table>
            <% bookmarks.forEach(function(bookmark) { %>
            <tr>
                <td style="width:110px">
                    <a href=""><%=bookmark.title%></a>
                </td>

                <td class = "icon pencil">
                    <!--need to fix these links-->
                    <a href="/books/edit/"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                </td>
                <td class = "icon trash">
                    <a href="/books/confirmdelete/"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                </td>
                <td class="icon star">
                    <a href="star.html"><i class="fa fa-star filled" aria-hidden="true"></i></a>
                </td>

            </tr>
            <% }); %>

        </table>
        <h2>Folders <a href='folder.html'><i class="fa fa-plus-square-o" aria-hidden="true"></i></a></h2>

        <table id="folders">
            <tr>
                <td>
                    <div class="folder">
                        <input type="checkbox" value="selected" id="social-folder" class="folder-input">
                        <label for="social-folder" class="social-label">Social Media</label>
                        <div role="folder" class="folder-content">
                            <li><a href='#'>Facebook</a></li>
                            <li><a href='#'>Instagram</a></li>
                            <li><a href='#'>Vine</a></li>
                            <li><a href='#'>Tumblr</a></li>
                        </div>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="folder">
                        <input type="checkbox" value="selected" id="class-folder" class="folder-input">
                        <label for="class-folder" class="social-label">Class</label>
                        <div role="folder" class="folder-content">
                            <li> <a href=#> CSE 136<a> </li>
                            <li><a href=#>CSE 141</a> </li>
                            <li><a href=#>CSE 120</a></li>
                        </div>
                    </div>
                </td>
            </tr>
        </table>


    </div>

</div>

<div class="home-container">

    <div class="row ">
        <div class="nav-left col-md-4" >
            <form id="sort-controls" action="sort.php" method="post" style="display:inline;">
                <div class="btn-group">
                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Sort bookmarks by... <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a href="">Title</a></li>
                        <li><a href="#">Last Visit</a></li>
                        <li><a href="#">URL</a></li>
                        <li><a href="#">Create Date</a></li>
                        <li><a href="#">Stared/Unstared</a></li>
                    </ul>
                </div>
            </form>
            <p class='import-export'>
                Import &nbsp;<a href="#"><span class="glyphicon glyphicon-import"></a></p>
            <p class='import-export'>Export &nbsp;<a href="#"><span class="glyphicon glyphicon-export"></a>
            </p>
        </div>

        <div class=" nav-right col-md-4">
            <div class="input-group">
                <input type="text" class="form-control fix-height" placeholder="Search for...">
							<span class="input-group-btn">
							<button class="btn btn-default" type="button">Go!</button>
							</span>
            </div>
        </div>
        <div class="nav-right col-md-1">
            <form method="post" action="/logout">
                <input class="log-button" type="submit" value="Log out">
            </form>
        </div>
        <div class="nav-right col-md-3">
            <form method="post" action="/newAccountForm" style="margin: 0; padding: 0;display:inline!important;">
                <input type="submit" class="log-button" value="Create new account" style="display: inline;">
            </form>
        </div>
    </div>
    <hr>
    <div class ="container-fluid">


        <div class="row">
            <% bookmarks.forEach(function(bookmark) {%>
            <div class="col-md-4">
                <div id="facebook" class="cards">
                    <h1><%=bookmark.title%></h1>
                    <p class="bookmark-description"><%=bookmark.description%></p>
                    <a style="text-decoration: none" href="#" target="_blank">
                        <div class="bookmark-button">
                            <p>Link</p>
                        </div>
                    </a>
                    <p class="tags"><span>Tags: </span><% if(bookmark.tag1) {%><%= bookmark.tag1 %><% } %> <% if(bookmark.tag2) {%><%= bookmark.tag2%><% } %> <% if(bookmark.tag2) {%><%= bookmark.tag3%><% } %> <% if(bookmark.tag2) {%><%= bookmark.tag4%><% } %></p>
                </div>
            </div>
            <% }); %>

        </div>



    </div>
    <script>
        function editForm(title){

            window.location = "edit.html?title="+title;//Edit;
        }
    </script>
</body>

</html>
